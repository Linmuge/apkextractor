<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="materialCardViewStyle">@style/materialCardViewStyle</item>
        <item name="materialAlertDialogTheme">@style/materialDialog</item>
        <item name="android:alertDialogTheme">@style/materialDialog</item>
        <item name="android:alertDialogStyle">@style/materialDialog</item>
        <item name="alertDialogStyle">@style/materialDialog</item>
        <item name="alertDialogTheme">@style/materialDialog</item>
        <item name="popupMenuBackground">?attr/colorSurface</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="materialCardViewStyle" parent="Widget.Material3.CardView.Filled">
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--更新样式-->
    <style name="materialDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:backgroundTint">@color/titleViewBgColor</item>
        <item name="android:background">@drawable/bg_10dp</item>
    </style>
    <!--更新样式-->
    <style name="updateDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_10dp</item>
        <item name="android:windowMinWidthMinor">300dp</item>
        <item name="android:windowMinWidthMajor">300dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowFixedWidthMinor">300dp</item>
    </style>
    <style name="CommonTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/colorTitle</item>
        <item name="colorPrimaryDark">@color/colorTitleDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <style name="BaseDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_10dp</item>
        <item name="android:background">@drawable/bg_10dp</item>
        <item name="android:backgroundTint">@color/titleViewBgColor</item>
        <item name="android:windowMinWidthMinor">350dp</item>
        <item name="windowFixedWidthMinor">350dp</item>
        <item name="android:shadowColor">@color/standardHintColor</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/standardHintColor</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/standardHintColor</item>
    </style>
</resources>
