<?xml version="1.0" encoding="utf-8"?>
<!-- 文件哈希 Fragment 布局 - Material Design 3 Expressive -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.CardView.Filled"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="12dp">

                <!-- MD5 -->
                <LinearLayout
                    android:id="@+id/hash_md5_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:text="@string/activity_detail_hash_md5"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp">
                        <TextView
                            android:id="@+id/hash_md5_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="monospace"
                            android:visibility="gone"
                            tools:text="d41d8cd98f00b204e9800998ecf8427e"
                            tools:visibility="visible"/>
                        <androidx.core.widget.ContentLoadingProgressBar
                            android:id="@+id/hash_md5_progress"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            style="?android:attr/progressBarStyle"/>
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="?attr/colorOutlineVariant"
                    android:alpha="0.4"/>

                <!-- SHA1 -->
                <LinearLayout
                    android:id="@+id/hash_sha1_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:text="@string/activity_detail_hash_sha1"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp">
                        <TextView
                            android:id="@+id/hash_sha1_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="monospace"
                            android:visibility="gone"
                            tools:text="da39a3ee5e6b4b0d3255bfef95601890afd80709"
                            tools:visibility="visible"/>
                        <androidx.core.widget.ContentLoadingProgressBar
                            android:id="@+id/hash_sha1_progress"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            style="?android:attr/progressBarStyle"/>
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="?attr/colorOutlineVariant"
                    android:alpha="0.4"/>

                <!-- SHA256 -->
                <LinearLayout
                    android:id="@+id/hash_sha256_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:text="@string/activity_detail_hash_sha256"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp">
                        <TextView
                            android:id="@+id/hash_sha256_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="monospace"
                            android:visibility="gone"
                            tools:text="e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855"
                            tools:visibility="visible"/>
                        <androidx.core.widget.ContentLoadingProgressBar
                            android:id="@+id/hash_sha256_progress"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            style="?android:attr/progressBarStyle"/>
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="?attr/colorOutlineVariant"
                    android:alpha="0.4"/>

                <!-- CRC32 -->
                <LinearLayout
                    android:id="@+id/hash_crc32_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:text="@string/activity_detail_hash_crc32"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp">
                        <TextView
                            android:id="@+id/hash_crc32_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="monospace"
                            android:visibility="gone"
                            tools:text="00000000"
                            tools:visibility="visible"/>
                        <androidx.core.widget.ContentLoadingProgressBar
                            android:id="@+id/hash_crc32_progress"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            style="?android:attr/progressBarStyle"/>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
