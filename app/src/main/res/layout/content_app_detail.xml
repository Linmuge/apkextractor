                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/app_detail_run_area"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="onClick">
                    <ImageView
                        android:id="@+id/app_detail_run_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/icon_play"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/app_detail_run_icon"
                        android:layout_marginStart="16dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:text="@string/activity_detail_run"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/app_detail_export_area"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onClick"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:id="@+id/app_detail_export_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/icon_download"/>
                    <TextView
                        android:id="@+id/app_detail_export_att"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/app_detail_export_icon"
                        android:layout_marginStart="16dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:text="@string/activity_detail_export"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/app_detail_share_area"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onClick"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:id="@+id/app_detail_share_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/icon_share"/>

                    <TextView
