<?xml version="1.0" encoding="utf-8"?>
<!-- 应用详情页布局 - Material Design 3 Expressive -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".activities.AppDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:fitsSystemWindows="true"
        app:liftOnScroll="false"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorSurface"
            app:statusBarScrim="?attr/colorSurface"
            app:titleEnabled="false"
            app:scrimAnimationDuration="0"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:toolbarId="@id/toolbar_app_detail">

            <!-- 可折叠内容区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingHorizontal="24dp"
                android:paddingBottom="20dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <!-- 占位空间：Toolbar 高度 + 状态栏高度 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"/>

                <!-- 额外状态栏高度占位 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="28dp"/>

                <!-- 应用图标 - 可点击进入系统详情 -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/app_detail_icon"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher"
                    android:transitionName="icon"/>

                <!-- 应用名称 -->
                <info.muge.appshare.ui.AutoMarqueeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_detail_name"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    tools:text="应用名称"/>

                <!-- 版本号 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_detail_version_name_title"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="V1.0.0"/>

            </LinearLayout>

            <!-- Toolbar - 放在后面使其渲染在上层，有实心背景 -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_app_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorSurface"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="?attr/colorOnSurface"
                app:titleTextColor="?attr/colorOnSurface"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!-- TabLayout - 固定在 AppBarLayout 底部 -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorSurface"
            app:tabMode="scrollable"
            app:tabGravity="start"
            app:tabIndicatorColor="?attr/colorPrimary"
            app:tabIndicatorHeight="3dp"
            app:tabIndicatorFullWidth="false"
            app:tabSelectedTextColor="?attr/colorPrimary"
            app:tabTextColor="?attr/colorOnSurfaceVariant"
            app:tabRippleColor="?attr/colorPrimaryContainer"
            app:tabPaddingStart="16dp"
            app:tabPaddingEnd="16dp"
            app:tabTextAppearance="?attr/textAppearanceTitleSmall"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
