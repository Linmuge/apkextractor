<?xml version="1.0" encoding="utf-8"?>
<!-- 应用列表项 - 线性布局模式 -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginEnd="@dimen/dp_12"
    style="@style/Widget.Material3.CardView.Filled"
    app:cardCornerRadius="@dimen/corner_radius_12dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainer">

    <RelativeLayout
        android:id="@+id/item_app_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12">

        <!-- 应用图标 -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_app_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:shapeAppearance="@style/shapeImage10dp"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher"/>

        <!-- 文本信息区域 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_app_icon"
            android:layout_toStartOf="@+id/item_app_right_area"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_8">

            <!-- 应用名称 -->
            <TextView
                android:id="@+id/item_app_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="应用名称"/>

            <!-- 应用描述（包名） -->
            <TextView
                android:id="@+id/item_app_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="@dimen/dp_4"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="com.example.app"/>
        </LinearLayout>

        <!-- 右侧区域（大小/复选框） -->
        <RelativeLayout
            android:id="@+id/item_app_right_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <!-- 应用大小 -->
            <TextView
                android:id="@+id/item_app_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="10.9MB"/>

            <!-- 复选框 -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/item_app_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

