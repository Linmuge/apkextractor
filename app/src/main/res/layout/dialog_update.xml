<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_10dp"
    android:backgroundTint="@color/titleViewBgColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户协议及隐私政策"
        android:textColor="@color/standardTextColor"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/tvDesc"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/coloraa"
        android:textSize="12sp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:lineSpacingExtra="5dp"
        android:maxLines="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        />

    <info.muge.appshare.ui.ArcButton
        android:id="@+id/tvCancel"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:textStyle="bold"
        android:textFontWeight="500"
        android:textColor="?attr/colorPrimary"
        android:textSize="12sp"
        android:gravity="center"
        android:background="@color/standardBgColor"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/tvDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@id/tvUpdate"
        android:text="不同意并退出"/>
    <info.muge.appshare.ui.ArcButton
        android:id="@+id/tvUpdate"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:textStyle="bold"
        android:textFontWeight="500"
        android:maxHeight="500dp"
        android:textSize="14sp"
        android:gravity="center"
        android:background="?attr/colorPrimary"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/tvCancel"
        app:layout_constraintEnd_toEndOf="@id/tvDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:text="同意"/>
</androidx.constraintlayout.widget.ConstraintLayout>