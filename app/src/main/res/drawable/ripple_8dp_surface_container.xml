    android:color="?attr/colorPrimary">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainer" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainer" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</ripple>

